<h1>Line Items Listing</h1>

<table>
  <thead>
    <tr>
      <th align="center">ID</th>
      <th align="center">Cart</th>      
      <th align="left">Product</th>
      <th align="center">Quantity</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td align="center"><%= line_item.id %></td>
        <td align="center"><%= line_item.cart.id %></td>        
        <td align="left"><%= line_item.product.title %></td>
        <td align="center"><%= line_item.quantity %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line item', new_line_item_path %>
